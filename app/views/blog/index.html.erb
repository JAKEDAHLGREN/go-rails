<div class="flex flex-col items-start justify-center px-4 md:items-center mt-28  sm:py-6 lg:py-0 ">

	<h1 class="text-4xl text-red-600 mb-8">Bloggggg!</h1>

	<%= @test %>

	<div class="flex items-center justify-center">
		<%= form_with(url: blog_path) do |form| %>


			<div class="space-y-4 mb-2">
				<div>
					<%= form.text_field :title  %>
				</div>

				<div>
					<%= form.text_area :body  %>
				</div>
			</div>

			<%= form.submit "Create Post", class:"text-white font-bold rounded-full px-4 py-2 bg-blue-600 hover:bg-blue-700 active:bg-blue-400 border border-black" %>

		<% end %> 
	</div>
</div>