<li class="group">
  <%= button_tag type: "button",
    class: "flex items-center w-full p-2 text-base font-medium text-black transition duration-75 rounded-lg hover:text-purple-600 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700 peer",
    aria: { controls: "dropdown-authentication", expanded: false },
    data: { collapse_toggle: "dropdown-authentication" } do %>

    <%= icon("fa-solid", "lock", class: "stroke-current") %>

    <span class="flex-1 ml-3 text-left whitespace-nowrap">Authentication</span>

    <!-- Chevron Icon with Rotation on Expanded State -->
    <div class="peer-aria-expanded:rotate-180">
      <%= icon("fa-solid", "chevron-down", class: "stroke-current") %>
    </div>
  <% end %>

  <ul id="dropdown-authentication" class="hidden py-2 space-y-2">
    <li>
      <a
        href="#"
        class="flex items-center w-full p-2 text-base font-medium text-gray-900 transition duration-75 rounded-lg pl-11 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700 hover:text-purple-600"
        >Sign In</a
      >
    </li>
    <li>
      <a
        href="#"
        class="flex items-center w-full p-2 text-base font-medium text-gray-900 transition duration-75 rounded-lg pl-11 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700 hover:text-purple-600"
        >Sign Up</a
      >
    </li>
    <li>
      <a
        href="#"
        class="flex items-center w-full p-2 text-base font-medium text-gray-900 transition duration-75 rounded-lg pl-11 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700 hover:text-purple-600"
        >Forgot Password</a
      >
    </li>
  </ul>
</li>