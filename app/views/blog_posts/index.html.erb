<div class="flex items-center mt-12">

	<div class="w-full max-w-md mx-auto space-y-4 md:space-y-6 xl:max-w-xl">
		<h1 class="mb-8 text-4xl font-bold text-center text-black">
			Current Blogs
		</h1>


		<div class="grid grid-cols-2 p-2 bg-gray-100 border border-black rounded-xl">
			<% @blog_posts.each do |blog_post| %>
				<div class="flex flex-col items-center px-4 py-2 mb-4">
					<h2 class="text-2xl font-semibold text-center text-blue-600">
						<%= blog_post.title %>
					</h2>

					<p class="text-center">
						<%= blog_post.body %>
					</p>

					<div class="flex justify-center">
						<%= link_to "View", blog_post, class:"mt-2 rounded-full bg-purple-700 hover:bg-purple-900 cursor-auto active:bg-purple-600 border text-white border-black py-2 px-4 text-center font-medium" %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>