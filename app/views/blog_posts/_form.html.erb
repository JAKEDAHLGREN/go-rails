<%= form_with model: blog_post do |form| %>
  <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message| %>
        <div class="font-bold text-red-600">
          <%= message %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="flex flex-col mt-2 mb-4">
    <%= form.label :title %>
    <%= form.text_field :title, class:"w-fit rounded-xl" %>
  </div>

  <div class="flex flex-col my-2">
    <%= form.label :body %>
    <%= form.text_area :body, class:"w-1/2 h-32 rounded-xl" %>
  </div>

  <%= form.submit class:"border py-2 px-4 border-gray-400 rounded-full" %>
<% end %>